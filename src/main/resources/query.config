											            "videos" : post.videos, \
											            "commentsCount" : post.commentsCount, \
											            "timestamp" : post.timestamp, \
											            "isCompanyPost" : post.isCompanyPost, \
											            "likers" : likers, \
											            "liked" : @companyId in post.likers \
											        } 
get.articles.query=FOR post in posts \
                       FILTER post.postId == @postId \
                       LET likers = ( \
                           for liker in users \
                               filter liker.userId in post.likers \
                               return \
                                   { \
                                       "likerId" : liker.userId, \
                                       "likerName" : concat(liker.firstName, " ", liker.lastName), \
                                       "likerProfilePictureUrl" : liker.profilePictureUrl \
                                   } \
                       ) \
                       FOR author in users \
                           FILTER author.userId == post.authorId \
                           RETURN \
                           { \
                               "authorName" : concat(author.firstName, " " , author.lastName), \
                               "authorProfilePictureUrl" : author.profilePictureUrl, \
                               "headline" : author.headline, \
                               "authorId": post.authorId, \
                               "postId" : post.postId, \
                               "title" : post.title, \
                               "text" : post.text, \
                               "images" : post.images, \
                               "videos" : post.videos, \
                               "commentsCount" : post.commentsCount, \
                               "timestamp" : post.timestamp, \
                               "isCompanyPost" : post.isCompanyPost, \
                               "likers" : likers, \
                               "liked" : @userId in post.likers \
                           }
get.comments.query=FOR comment in comments \
    FILTER comment.parentPostId == @postId \
    LET likers = ( \
        for liker in users \
            filter liker.userId in comment.likers \
            return \
                { \
                    "likerId" : liker.userId, \
                    "likerName" : concat(liker.firstName, " ", liker.lastName), \
                    "likerProfilePictureUrl" : liker.profilePictureUrl \
                } \
    ) \
    FOR author in users \
        FILTER author.userId == comment.authorId \
        SORT comment.timestamp DESC \
        Limit 0, @limit \
        RETURN \
        { \
            "authorName" : concat(author.firstName, " " , author.lastName), \
            "authorProfilePictureUrl" : author.profilePictureUrl, \
            "authorId" : comment.authorId, \
            "commentId" : comment.commentId, \
            "parentPostId" : comment.parentPostId, \
            "repliesCount" : length(comment.repliesCount), \
            "text" : comment.text, \
            "timestamp" : comment.timestamp, \
            "likers" : likers, \
            "liked" : @userId in comment.likers \
        }
get.replies.query=FOR reply IN replies \
    FILTER reply.parentCommentId == @commentId \
        LET likers = ( \
        for liker in users \
            filter liker.userId in reply.likers \
            return \
                { \
                    "likerId" : liker.userId, \
                    "likerName" : concat(liker.firstName, " ", liker.lastName), \
                    "likerProfilePictureUrl" : liker.profilePictureUrl \
                } \
    ) \
    FOR author IN users \
        FILTER author.userId == reply.authorId \
        SORT reply.timestamp DESC \
        Limit 0, @limit \
        RETURN \
        {  \
            "authorName" : concat(author.firstName, " " , author.lastName), \
            "authorProfilePictureUrl" : author.profilePictureUrl, \
            "authorId" : reply.authorId, \
            "replyId" : reply.replyId, \
            "parentPostId": reply.parentPostId, \
            "parentCommentId": reply.parentCommentId, \
            "text": reply.text, \
            "timestamp": reply.timestamp, \
            "likers" : likers, \
            "liked" : @userId in reply.likers \
        }
